# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/traitquest

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AI 模型與 API 設定
LITELLM_URL=http://localhost:4000
LLM_MODEL=github_copilot/gpt-4o
GITHUB_COPILOT_TOKEN=your-github-token
GITHUB_COPILOT_HEADERS={"editor-version": "vscode/1.85.1", "editor-plugin-version": "copilot/1.155.0", "Copilot-Integration-Id": "vscode-chat", "user-agent": "GithubCopilot/1.155.0"}

# 應用程式安全
SECRET_KEY=your-super-secret-key-change-me
APP_ENV=development
LOG_FILE_PATH=your-log-file-path-change-me
# CORS 允許來源（JSON 陣列格式，正式環境請改為實際網域）
CORS_ORIGINS=["http://localhost:3000"]

# Google OAuth (後端驗證用)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
